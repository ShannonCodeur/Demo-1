{% extends "demo_translation/layout.html.twig" %}

{% block content %}
    <h2>Product show</h2>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ entity.category.title }} ({{ entity.category.company.title }})</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ entity.media.url }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        <a class="btn btn-default" role="button" href="{{ path('knp_backend_product') }}">
            Back to the list
        </a>
        <a class="btn btn-default" role="button" href="{{ path('knp_backend_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        {{ form(deleteForm) }}
    </div>
{% endblock %}