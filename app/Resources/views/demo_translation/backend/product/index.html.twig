{% extends "demo_translation/layout.html.twig" %}

{% block content %}
    <h2>Product list</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Media</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('knp_backend_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.category.title }} ({{ entity.category.company.title }})</td>
                <td>{{ entity.media.url }}</td>
                <td>
                    <a class="btn btn-default" role="button" href="{{ path('knp_backend_product_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-default" role="button" href="{{ path('knp_backend_product_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default" role="button" href="{{ path('knp_backend_product_new') }}">
        Create a new entry
    </a>
{% endblock %}