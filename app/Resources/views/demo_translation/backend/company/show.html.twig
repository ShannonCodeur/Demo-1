{% extends "demo_translation/layout.html.twig" %}

{% block content %}
    <h2>Company show</h2>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{% for categ in entity.categories %}{{ categ.title }}, {% endfor %}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ entity.medias|first ? (entity.medias|first).url }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        <a class="btn btn-default" role="button" href="{{ path('a2lix_backend_company') }}">
            Back to the list
        </a>
        <a class="btn btn-default" role="button" href="{{ path('a2lix_backend_company_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        {{ form(deleteForm) }}
    </div>
{% endblock %}